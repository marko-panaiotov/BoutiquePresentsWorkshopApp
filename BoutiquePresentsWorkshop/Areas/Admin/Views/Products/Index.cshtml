@using BPW.Data.Entities;
@model IEnumerable<Product>;

@{
    ViewData["Title"] = "Index";
}



<br /><br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Продукти</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="bi bi-plus-lg"></i>&nbsp; Добавяне на нов продукт</a>
    </div>

</div>
<form method="post">
    <div class="row">
        <div class="col-3">
            <input type="number" class="form-control" name="lowAmount"/>
        </div>
        <div class="col-3">
            <input type="number" class="form-control" name="largeAmount"/>
        </div>
        <div class="col-3">
            <input type="submit" value="Search" class="btn btn-success"/>
        </div>
        <div class="col-3"></div>
    </div>
</form>
<br />
<div>
    <table class="table table-striped border" id="myTable">
        <thead>
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(c => c.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.Price)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.ProductDescription)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.IsAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.Category)
            </th>
            <th></th>
            <th></th>
        </tr>
        </thead>
       
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Price</td>
                    <td>@item.ProductDescription</td>
                    <td>@item.IsAvailable</td>
                    <td>@item.Category.CategoryName</td>
                    <td>
                        <partial name="_ButtonPartial" model="@item.Id" />
                    </td>
                </tr>
            }
        </tbody>


</table>
</div>

@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.11.2/build/alertify.min.js"></script>
    
    <script type="text/javascript">
        $(document).ready( function () {
            $('#myTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'pageLength','copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });
        } );
        $(function(){
            var save = '@TempData["save"]'
            if(save!='') {
                alertify.success(save);
            }
            var edit = '@TempData["edit"]'
            if(edit!='') {
                alertify.success(edit);
            }
            var del = '@TempData["delete"]'
            if (del!='') {
                alertify.error(del);
            }
        })
    </script>
}