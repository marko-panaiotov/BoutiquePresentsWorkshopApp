@using BoutiquePresentsWorkshop.Models
@model List<Products>
@{
    ViewData["Title"] = "Cart";
}

<h1>Вашата количка</h1>

<br/>
<div class="row">
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Снимка</th>
            <th>Наименование</th>
            <th>Цена</th>
            <th>Категория</th>
            <th>Описание</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/@item.Image" width="200px" height="150px"/>
                </td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.ProductTypes.ProductType</td>
                <td>@item.Description</td>
                <td>
                    <a asp-area="Customer" asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-6">
        <a asp-action="Index" asp-controller="Home" class="btn btn-success">Обратно в сайта</a>
    </div>
    <div class="col-6 text-right">
        <h3>Обща цена : @Model.Sum(c=>c.Price) $</h3>
        <a asp-area="Customer" asp-action="Checkout" asp-controller="Order" class="btn btn-info">Преминете към плащане</a>
    </div>
</div>

